[
  {
    "name": "fin-project",
    "image": "${REPOSITORY_URL}:BUILD_NUMBER",
    "networkMode": "awsvpc",
    "essential": true,
    "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fin-project",
          "awslogs-region": "${AWS_ECR_REGION}",
          "awslogs-stream-prefix": "ecs"
        }
    },
    "portMappings": [
      {
        "containerPort": 22,
        "hostPort": 22
      },
      {
        "containerPort": 80,
        "hostPort": 80
      }
    ]

  }
]
